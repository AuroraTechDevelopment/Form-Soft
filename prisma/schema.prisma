generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model feedbacks {
  id        String   @id
  userID    String?  @db.Uuid
  category  String
  comment   String
  createdAt DateTime @default(now())
  users     users?   @relation(fields: [userID], references: [id])
}

model forms {
  id              String        @id
  userID          String        @db.Uuid
  title           String
  description     String
  questions       Json
  manySubmission  Boolean
  editable        Boolean
  status          FormStatus
  viewCount       Int
  submissionCount Int
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @default(now())
  deadline        DateTime
  users           users         @relation(fields: [userID], references: [id])
  reports         reports[]
  submissions     submissions[]
}

model reports {
  id       String   @id
  formID   String
  userID   String?  @db.Uuid
  category String
  comment  String
  createAt DateTime @default(now())
  forms    forms    @relation(fields: [formID], references: [id])
  users    users?   @relation(fields: [userID], references: [id])
}

model submissions {
  id        String   @id
  formID    String
  userID    String?  @db.Uuid
  answers   Json
  createdAt DateTime @default(now())
  forms     forms    @relation(fields: [formID], references: [id])
  users     users?   @relation(fields: [userID], references: [id])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model users {
  id          String        @id @db.Uuid
  name        String
  username    String        @unique
  image       String?
  status      Usertatus     @default(UNVERIFIED)
  role        UserRole      @default(USER)
  preferences Json?
  createdAt   DateTime      @default(now())
  lastLogin   DateTime      @default(now())
  feedbacks   feedbacks[]
  forms       forms[]
  reports     reports[]
  submissions submissions[]
}

enum UserRole {
  ADMIN
  MODERATOR
  USER
}

enum FormStatus {
  DRAFT
  ARCHIVED
  OPENED
  CLOSED
}

enum Usertatus {
  UNVERIFIED
  INCOMPLETE
  OPEN
  CLOSED
  DEACTIVATED
  ARCHIVED
  DELETED
}
